@model List<HeldItem>
@{
    ViewBag.Title = "Display All Items";
}
    
<h1 class="text-center">Items</h1>
<form asp-controller="HeldItem" asp-action="DisplayAllItems" method="get">
    <p>
        Search by Item Type (Berries or Hold Items): <input type="text" name="searchType" />
        Search by Item Name: <input type="text" name="searchName" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Item Category</th>
            <th scope="col">Item Name</th>
            <th scope="col">Item Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td scope="row">@i.ItemCat</td>
                <td>@i.ItemName</td>
                <td>@i.ItemEffect</td>
            </tr>
        }
    </tbody>
</table>
<footer class="align-content-center">
    <a class="btn btn-primary align-content-center" asp-controller="Home" asp-action="ContentHub">Return to Content Hub</a>
</footer>
