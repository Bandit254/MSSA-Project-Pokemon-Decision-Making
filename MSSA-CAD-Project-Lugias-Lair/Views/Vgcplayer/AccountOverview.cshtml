@{
    ViewBag.Title = "Account Overview";
}

<header>
    <h1 class="text-center">Trainer's Lair</h1>
        <h3 class="text-center">Welcome, @Context.Session.GetString("User Name")</h3>
        <img src="~/Images/Gen_1_Trainer.png" alt="Trainer Icon" />
</header>
 <div class="container">
    <div class="row align-content-center">
        <h4 class="text-center">Base Teams</h4>
        
            <a class="btn btn-primary" asp-controller="TeamBase" asp-action="SavedTeams">Your Saved Teams</a>
        
    </div>
    <div class="row align-content-center">
        <h4 class="text-center">Favorite Base Teams</h4>
        <div class="align-items-center">
        <p class="text-center">Currently Unavailable</p>
        </div>
    </div>
    <div class="row align-content-center">
        <h4 class="text-center">Customized Pokemon</h4>
        <div class="align-items-center">
             <p class="text-center">Currently Unavailable</p>
        </div>
    </div>
    <div class="row align-content-center">
    <h4 class="text-center">Favorite Pokemon</h4>
        <div class="align-items-center">
            <p class="text-center">Currently Unavailable</p>
        </div>
    </div>
    <div class="row align-content-center">
        <div class="col-6">
            <a class="btn btn-primary" asp-controller="Vgcplayer" asp-action="UpdateAccount">Update Account</a>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-controller="Home" asp-action="ContentHub">Return to Content Hub</a>
        </div>
    </div>
</div>


